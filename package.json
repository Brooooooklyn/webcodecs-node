{
  "name": "@napi-rs/webcodec",
  "version": "0.0.0",
  "description": "WebCodecs API implementation for Node.js using FFmpeg",
  "main": "index.js",
  "types": "index.d.ts",
  "browser": "browser.js",
  "repository": {
    "url": "git+ssh://git@github.com/Brooooooklyn/webcodec-node.git",
    "type": "git"
  },
  "license": "MIT",
  "keywords": [
    "napi-rs",
    "NAPI",
    "N-API",
    "Rust",
    "node-addon",
    "node-addon-api"
  ],
  "files": [
    "index.d.ts",
    "index.js",
    "standard.d.ts"
  ],
  "napi": {
    "binaryName": "webcodec",
    "targets": [
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "x86_64-pc-windows-msvc",
      "aarch64-unknown-linux-gnu",
      "aarch64-unknown-linux-musl",
      "aarch64-pc-windows-msvc",
      "armv7-unknown-linux-gnueabihf"
    ],
    "constEnum": false
  },
  "engines": {
    "node": ">= 10"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "artifacts": "napi artifacts",
    "bench": "node --import @oxc-node/core/register benchmark/bench.ts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "format": "run-p format:prettier format:rs format:toml",
    "format:prettier": "prettier . -w",
    "format:toml": "taplo format",
    "format:rs": "cargo fmt",
    "lint": "oxlint",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "ava",
    "typecheck": "tsc --noEmit",
    "version": "napi version"
  },
  "devDependencies": {
    "@emnapi/core": "^1.7.1",
    "@emnapi/runtime": "^1.7.1",
    "@napi-rs/cli": "^3.5.0",
    "@napi-rs/wasm-runtime": "^1.1.0",
    "@oxc-node/core": "^0.0.35",
    "@taplo/cli": "^0.7.0",
    "@tybys/wasm-util": "^0.10.1",
    "@types/node": "^24.10.1",
    "ava": "^6.4.1",
    "chalk": "^5.6.2",
    "emnapi": "^1.7.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all2": "^8.0.4",
    "oxlint": "^1.31.0",
    "prettier": "^3.7.4",
    "tinybench": "^6.0.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "oxlint --fix"
    ],
    "*.@(js|ts|tsx|yml|yaml|md|json)": [
      "prettier --write"
    ],
    "*.toml": [
      "taplo format"
    ]
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "__test__/**/*.spec.ts"
    ],
    "timeout": "2m",
    "workerThreads": false,
    "environmentVariables": {
      "TS_NODE_PROJECT": "./tsconfig.json"
    },
    "nodeArguments": [
      "--import",
      "@oxc-node/core/register"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  },
  "packageManager": "pnpm@10.24.0"
}
