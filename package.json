{
  "name": "@napi-rs/webcodecs",
  "version": "1.1.0",
  "description": "WebCodecs API implementation for Node.js using FFmpeg",
  "keywords": [
    "N-API",
    "NAPI",
    "Rust",
    "napi-rs",
    "node-addon",
    "node-addon-api"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/Brooooooklyn/webcodecs-node.git"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Brooooooklyn"
  },
  "license": "MIT",
  "main": "index.js",
  "exports": {
    ".": {
      "types": "./index.d.ts",
      "import": "./index.js",
      "require": "./index.js"
    },
    "./polyfill": {
      "types": "./polyfill.d.ts",
      "import": "./polyfill.js",
      "require": "./polyfill.js"
    }
  },
  "browser": "browser.js",
  "types": "index.d.ts",
  "files": [
    "index.d.ts",
    "index.js",
    "polyfill.d.ts",
    "polyfill.js",
    "standard.d.ts"
  ],
  "scripts": {
    "artifacts": "napi artifacts",
    "bench": "node --import @oxc-node/core/register benchmark/bench.ts",
    "build": "napi build --platform --release",
    "build:debug": "napi build --platform",
    "format": "run-p format:rs format:toml format:oxfmt format:prettier",
    "format:prettier": "prettier . \"!**/*.{js,jsx,ts,tsx}\" -w",
    "format:oxfmt": "oxfmt",
    "format:toml": "taplo format",
    "format:rs": "cargo fmt",
    "lint": "oxlint --type-aware",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "ava",
    "typecheck": "tsc -b tsconfig.json",
    "preversion": "napi build --platform && git add .",
    "version": "napi version"
  },
  "lint-staged": {
    "*.@(js|ts|tsx)": [
      "oxlint --fix",
      "oxfmt"
    ],
    "*.@(yml|yaml|md|json)": [
      "prettier --write"
    ],
    "*.toml": [
      "taplo format"
    ]
  },
  "devDependencies": {
    "@emnapi/core": "^1.7.1",
    "@emnapi/runtime": "^1.7.1",
    "@napi-rs/canvas": "^0.1.84",
    "@napi-rs/cli": "^3.5.0",
    "@napi-rs/wasm-runtime": "^1.1.0",
    "@oxc-node/core": "^0.0.35",
    "@taplo/cli": "^0.7.0",
    "@tybys/wasm-util": "^0.10.1",
    "@types/node": "^25.0.2",
    "ava": "^6.4.1",
    "chalk": "^5.6.2",
    "emnapi": "^1.7.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "mediabunny": "1.26.0",
    "npm-run-all2": "^8.0.4",
    "oxfmt": "^0.18.0",
    "oxlint": "^1.33.0",
    "oxlint-tsgolint": "^0.9.1",
    "prettier": "^3.7.4",
    "tinybench": "^6.0.0",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "@napi-rs/canvas": ">=0.1.0"
  },
  "peerDependenciesMeta": {
    "@napi-rs/canvas": {
      "optional": true
    }
  },
  "napi": {
    "binaryName": "webcodecs",
    "constEnum": false,
    "dtsHeaderFile": "dts-header.d.ts",
    "targets": [
      "x86_64-apple-darwin",
      "aarch64-apple-darwin",
      "x86_64-unknown-linux-gnu",
      "x86_64-unknown-linux-musl",
      "x86_64-pc-windows-msvc",
      "aarch64-unknown-linux-gnu",
      "aarch64-unknown-linux-musl",
      "aarch64-pc-windows-msvc",
      "armv7-unknown-linux-gnueabihf"
    ]
  },
  "packageManager": "pnpm@10.26.0",
  "prettier": {
    "arrowParens": "always",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "ava": {
    "environmentVariables": {
      "TS_NODE_PROJECT": "./tsconfig.json"
    },
    "extensions": {
      "ts": "module"
    },
    "files": [
      "__test__/**/*.spec.ts"
    ],
    "nodeArguments": [
      "--import",
      "@oxc-node/core/register"
    ],
    "timeout": "5m",
    "workerThreads": false
  },
  "engines": {
    "node": ">= 10"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
