{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ES2023"],
    "strict": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "./dist",
  },
  "include": ["."],
  "exclude": ["dist", "node_modules", "ffmpeg-build", "ffmpeg-src", "specs", "polyfill.d.ts", "polyfill.js", "__test__/integration/conversion.spec.ts"],
  "references": [
    { "path": "./tsconfig.polyfill.json" }
  ]
}
