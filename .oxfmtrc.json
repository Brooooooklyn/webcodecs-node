{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "semi": false,
  "singleQuote": true,
  "printWidth": 120,
  "trailingComma": "all",
  "arrowParens": "always",
  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    "build/**",
    "ffmpeg-build/**",
    "ffmpeg-src/**",
    "./index.js",
    "!**/*.{ts,js}"
  ]
}
